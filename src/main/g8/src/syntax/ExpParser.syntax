module syntax.ExpParser;

header {
    import syntax.Syntax.*;
}

Program =
    Exp.

Exp {paren} =
    Exp "+" Exp     {Add, left, 2}    
  | Exp "*" Exp     {Mul, left, 1}
  | Integer         {Num, 1: Integer.parseInt : Int}
  | '(' Exp ')'.

Integer : String =
  Digits Spacing.

Digits : String  =
  Digit+.

Digit : String =
  [0-9].
